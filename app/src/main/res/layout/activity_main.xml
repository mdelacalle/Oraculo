<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:background="@android:color/white"
    tools:context="mdelacalle.com.oraculo.MainActivity">

    <DatePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/datePicker"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />



    <GridView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/gridViewDailyGames"
        android:columnWidth="350dp"
        android:horizontalSpacing="10dp"
        android:numColumns="auto_fit"
        android:padding="5dp"
        android:verticalSpacing="10dp"
        android:layout_centerVertical="true"
        android:layout_below="@id/datePicker" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@mipmap/presidents"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/datePicker"
        android:layout_above="@+id/gridViewDailyGames" />


</RelativeLayout>
